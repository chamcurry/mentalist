<div class="container">
  <div class="row">
    <div class="col">
     <h3>ジャンル一覧・追加</h3>
     <div class="form_group">
       <%= form_with model: @genre,url: admin_genres_path do |f| %>
        <span class="genre_soup">
         スープ名
         <%=f.text_field :soup %>
        </span>
        <span class="btn">
         <%=f.submit "新規登録",class:'btn btn-success' %>
        </span>
       <% end %>
     </div>
     <table class="table">
       <thead>
         <tr>
           <th>スープ</th>
           <th></th>
         </tr>
       </thead>
       <tbody>
       <% @genres.each do |genre| %>
         <tr>
           <td><%= genre.soup %></td>
           <td><%= link_to "削除する",admin_genre_path(genre.id),method: :delete,class: "btn btn-danger"%></td>
         </tr>
        <% end %>
       </tbody>
     </table>
    </div>

  </div>
</div>