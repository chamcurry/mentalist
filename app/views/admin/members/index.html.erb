<div class="container">
  <div class="row">
      <div class="h3 mt-5 ">会員一覧</div>
    <div class="table-responsive">
      <table class= "table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>有効/退会</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @kaminari.each do |member| %>
          <tr>
            <td><%= member.id %></td>
            <td><%=member.full_name %></td>
            <td><%= member.email %></td>
            <!--下に退会ステータスを表示する-->
            <% if member.is_active %>
              <td>有効</td>
            <% else %>
              <td>退会</td>
            <% end %>
            <td><%= link_to "退会にする",admin_member_withdraw_path(member.id),method: :patch,data:{confirm: "退会させますか？"},class: "btn btn-danger btn-sm m-1"%><%= link_to "有効にする",admin_member_path(member.id),method: :patch,data:{confirm: "有効にしますか？"},class: "btn btn-primary btn-sm m-1"%></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
    <%= paginate @kaminari,theme: 'twitter-bootstrap-4' %>
</div>