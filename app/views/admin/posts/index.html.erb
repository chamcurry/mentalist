<div class="container">
  <div class="row">
       <div class="h3 mt-5 ">投稿一覧</div>
    <div class="table-responsive">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員名</th>
            <th></th>
            <th>タイトル</th>
            <th>本文</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.member.full_name %></td>
          <% if post.image.attached? %>
            <td><%= image_tag post.image,size: "100x100" %></td>
          <% end %>
            <td><%= post.title %></td>
            <td><%= post.body.truncate(10) %></td>
            <td><%=link_to "詳細",admin_post_path(post),class: "btn btn-success" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
    <%= paginate @posts,theme: 'twitter-bootstrap-4' %>
</div>