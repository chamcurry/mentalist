<div class="container-fluid">
  <div class="row mt-3">
    <div class="col-xl-5 col-lg-4 d-flex flex-column align-items-center">
      <p>プロフィール</p>
      <div><%=image_tag current_menber.get_profile_image,size: "200x200",class: " border rounded-circle" %></div>
      <div class="my-3 float-left">
        <h5>投稿数:
          <%=@posts.length %>
        </h5>
        <h5>ユーザー名</h5>
        <div class= "border-bottom border-dark mb-2">
          <%=current_menber.full_name %>
        </div>
        <h5>メールアドレス:</h5>
        <div class= "border-bottom border-dark mb-2">
          <%=current_menber.email %>
        </div>
      </div>
      <div>
        <%=link_to edit_menbers_path,class: "d-flex flex-column align-items-center btn btn-success mb-2" do %>
          編集する
        <% end %>
        <%=link_to like_list_menbers_path,class: "btn btn-danger mb-2" do %>
          いいねリスト
        <% end %>
      </div>
    </div>
    <div class="col-xl-7 col-lg-8">
      <p class="text-center">投稿リスト</p>
      <% @posts.reverse_each do |post| %>
        <div class="card-deck mb-2">
          <div class="card p-1 col-sm-4">
            <div class="card-img">
             <%=link_to post_path(post) do %>
                <% if post.image.attached? %>
                 <%=image_tag post.image,width: "100%"%>
                <% end %>
             <% end %>
            </div>
          </div>
          <div class="col-md-8 card-body m-1 bg-dark text-light">
            <div><%=post.created_at.strftime('%Y/%m/%d')%></div>
            <h5><%=post.title%></h5>
            <% post.genres.each do |genre| %>
               <span class= 'badge badge-secondary'><%= genre.soup %></span>
            <% end %>
            <div><%= post.body.truncate(13) %></div>
            <div id="star-rate-<%= post.id %>"></div>
            <script>
              $('#star-rate-<%= post.id %>').raty({
                size: 36,
                starOff: "<%= asset_path('star-off.png') %>",
                starOn: "<%= asset_path('star-on.png') %>",
                starHalf: "<%= asset_path('star-half.png') %>",
                half: true,
                readOnly: true,
                score: <%= post.star %>
              });
            </script>
            <%#= post.star %>
            <div class="row">
              <i class="far fa-comment-alt d-flex align-items-center text-info mx-3"><%= post.comments.count%></i>
                <% if post.favorited_by?(current_menber) %>
                 <!--一致するレコードが存在する＝すでにいいね済みの場合はdestroyアクションへ-->
                  <%= link_to post_favorites_path(post), method: :delete do %>
                    <i class="fas fa-heart text-danger"><%= post.favorites.count%></i>
                  <% end %>
                <% else %>
                <!--一致するレコードが存在しない＝まだいいねしていない場合はcreateアクションへ-->
                  <%= link_to post_favorites_path(post), method: :post do %>
                    <i class="fas fa-heart text-muted"><%= post.favorites.count %></i>
                  <% end %>
                <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>