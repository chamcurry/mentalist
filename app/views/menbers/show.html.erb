<div class="container-fluid">
  <div class="row mt-3">
    <div class="col-sm-5  d-flex flex-column align-items-center">
      <p>プロフィール</p>
      <div><%=image_tag current_menber.get_profile_image,size: "200x200",class: " border rounded-circle" %></div>
      <div class="my-3 float-left">
        <h5>投稿数:
          <%=@posts.length %>
        </h5>
        <h5>ユーザー名</h5>
        <div class= "border-bottom border-dark mb-2">
          <%=current_menber.full_name %>
        </div>
        <h5>メールアドレス:</h5>
        <div class= "border-bottom border-dark mb-2">
          <%=current_menber.email %>
        </div>
      </div>
          <%=link_to edit_menbers_path,class: "btn btn-success mb-2" do %>
            編集する
          <% end %>
    </div>
    <div class="sidebar col-lg-7 overflow-auto">
      <p class="text-center">投稿リスト</p>
        <% @posts.each do |post| %>
          <div class="card mb-2">
            <div class="row">
              <div class="col-sm-4">
               <%=link_to post_path(post) do %>
                  <% if post.image.attached? %>
                   <%=image_tag post.image,size: "220x200",class: "text-success"%>
                  <% end %>
               <% end %>
              </div>
            <div class="card-body">
             <div class="col-md-8">
              <% if post.favorited?(current_menber) %>
                 <!--一致するレコードが存在する＝すでにいいね済みの場合はdestroyアクションへ-->
                <%= link_to post_favorite_path(post.id), method: :delete do %>
                    <span style="color:red;">❤︎</span>
                <% end %>
              <% else %>
                <!--一致するレコードが存在しない＝まだいいねしていない場合はcreateアクションへ-->
                <%= link_to post_favorites_path(post.id), method: :post do %>
                    <span>❤︎</span>
                <% end %>
              <% end %>
                <div><%=post.created_at.strftime('%Y/%m/%d')%></div>
                <h5><%=post.title%></h5>
                <% post.genres.each do |genre| %>
                   <span class= 'badge badge-primary'><%= genre.soup %></span>
                <% end %>
                <div><%= post.body.truncate(13) %></div>
                <!--<span>評価：</span>-->
                <div id="star-rate-<%= post.id %>"></div>
                <script>
                  $('#star-rate-<%= post.id %>').raty({
                    size: 36,
                    starOff: "<%= asset_path('star-off.png') %>",
                    starOn: "<%= asset_path('star-on.png') %>",
                    starHalf: "<%= asset_path('star-half.png') %>",
                    half: true,
                    readOnly: true,
                    score: <%= post.star %>
                  });
                </script>
                <!--<%= post.star %>レビュー整数-->
             </div>
           </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>